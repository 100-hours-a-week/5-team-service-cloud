{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      },
      {
        "datasource": "Prometheus",
        "enable": true,
        "iconColor": "#FF6600",
        "name": "Migration Events",
        "tags": ["migration"],
        "type": "tags"
      }
    ]
  },
  "description": "무중단 마이그레이션 실시간 모니터링 대시보드",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "Migration Overview",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 99 },
              { "color": "green", "value": 99.9 }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "auto"
      },
      "title": "API Availability",
      "description": "전체 API 가용성 (%)",
      "type": "stat",
      "targets": [
        {
          "expr": "100 * (1 - rate(http_server_requests_seconds_count{status=~\"5..\"}[5m]) / rate(http_server_requests_seconds_count[5m]))",
          "legendFormat": "Availability"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          },
          "unit": "ms"
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 1 },
      "id": 2,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "title": "API P95 Latency",
      "description": "API 응답시간 P95",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket[5m])) * 1000",
          "legendFormat": "P95"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 1 },
      "id": 3,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "title": "5xx Error Count",
      "description": "서버 에러 수 (5분간)",
      "type": "stat",
      "targets": [
        {
          "expr": "increase(http_server_requests_seconds_count{status=~\"5..\"}[5m])",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "red", "value": 35 }
            ]
          }
        }
      },
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 1 },
      "id": 4,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "title": "HikariCP Active Connections",
      "description": "현재 활성 DB 커넥션 수",
      "type": "stat",
      "targets": [
        {
          "expr": "hikaricp_connections_active",
          "legendFormat": "Active"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 6 },
      "id": 101,
      "title": "DB Migration (Unit 5-7)",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          },
          "unit": "ms"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 7 },
      "id": 10,
      "title": "DB Query Latency (Read vs Write)",
      "description": "DB 읽기/쓰기 쿼리 응답시간 — 컷오버 시 스파이크 관찰",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{uri=~\"/api/meetings.*\",method=\"GET\"}[1m])) * 1000",
          "legendFormat": "Read P95"
        },
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket{method=~\"POST|PUT|DELETE\"}[1m])) * 1000",
          "legendFormat": "Write P95"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 7 },
      "id": 11,
      "title": "HikariCP Connection Pool",
      "description": "커넥션 풀 상태 — 컷오버 시 drain → recovery 관찰",
      "type": "timeseries",
      "targets": [
        {
          "expr": "hikaricp_connections_active",
          "legendFormat": "Active"
        },
        {
          "expr": "hikaricp_connections_idle",
          "legendFormat": "Idle"
        },
        {
          "expr": "hikaricp_connections_pending",
          "legendFormat": "Pending"
        },
        {
          "expr": "hikaricp_connections_max",
          "legendFormat": "Max"
        },
        {
          "expr": "hikaricp_connections_timeout_total",
          "legendFormat": "Timeout (total)"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "stacking": { "mode": "normal" }
          },
          "color": { "mode": "palette-classic" }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "id": 12,
      "title": "HTTP Request Rate by Status",
      "description": "상태코드별 요청 수 — 5xx 증가 시점 = 장애 구간",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{status=~\"2..\"}[1m])",
          "legendFormat": "2xx"
        },
        {
          "expr": "rate(http_server_requests_seconds_count{status=~\"4..\"}[1m])",
          "legendFormat": "4xx"
        },
        {
          "expr": "rate(http_server_requests_seconds_count{status=~\"5..\"}[1m])",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "ms"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "id": 13,
      "title": "HikariCP Connection Acquire Time",
      "description": "커넥션 획득 시간 — 전환 시 급증 후 회복 패턴 확인",
      "type": "timeseries",
      "targets": [
        {
          "expr": "hikaricp_connections_acquire_seconds{quantile=\"0.95\"} * 1000",
          "legendFormat": "Acquire P95"
        },
        {
          "expr": "hikaricp_connections_acquire_seconds{quantile=\"0.99\"} * 1000",
          "legendFormat": "Acquire P99"
        },
        {
          "expr": "hikaricp_connections_creation_seconds{quantile=\"0.95\"} * 1000",
          "legendFormat": "Creation P95"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 102,
      "title": "Service Deploy & Nginx (Unit 9-10)",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "id": 20,
      "title": "Request Rate (RPS)",
      "description": "초당 요청 수 — 배포/전환 시 드롭 여부 관찰",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "Total RPS"
        },
        {
          "expr": "rate(http_server_requests_seconds_count{status=\"200\"}[1m])",
          "legendFormat": "200 RPS"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "percent"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "id": 21,
      "title": "Error Rate (%)",
      "description": "에러율 — 0%가 무중단 증명",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 * rate(http_server_requests_seconds_count{status=~\"5..\"}[1m]) / rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "Error Rate"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 32 },
      "id": 103,
      "title": "System Resources",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "percent"
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 33 },
      "id": 30,
      "title": "CPU Usage",
      "description": "CPU 사용률 — 마이그레이션 중 스파이크 관찰",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 33 },
      "id": 31,
      "title": "Memory Usage",
      "description": "메모리 사용량",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Used {{instance}}"
        },
        {
          "expr": "node_memory_MemTotal_bytes",
          "legendFormat": "Total {{instance}}"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "Bps"
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 33 },
      "id": 32,
      "title": "Network I/O",
      "description": "네트워크 송수신 — 복제/전환 트래픽 관찰",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m])",
          "legendFormat": "Recv {{instance}}"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m])",
          "legendFormat": "Send {{instance}}"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 41 },
      "id": 104,
      "title": "JVM & Application",
      "type": "row"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 42 },
      "id": 40,
      "title": "JVM Heap Usage",
      "description": "JVM 힙 메모리 — 마이그레이션 중 GC 영향 확인",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "legendFormat": "Used {{id}}"
        },
        {
          "expr": "jvm_memory_max_bytes{area=\"heap\"}",
          "legendFormat": "Max {{id}}"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 42 },
      "id": 41,
      "title": "Active Threads",
      "description": "활성 스레드 수 — 커넥션 풀 재생성 시 스레드 급증 관찰",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "legendFormat": "Live Threads"
        },
        {
          "expr": "jvm_threads_daemon_threads",
          "legendFormat": "Daemon Threads"
        },
        {
          "expr": "jvm_threads_peak_threads",
          "legendFormat": "Peak Threads"
        }
      ]
    }
  ],
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["migration", "zero-downtime", "doktori"],
  "templating": {
    "list": [
      {
        "current": { "text": "All", "value": "$__all" },
        "datasource": "Prometheus",
        "definition": "label_values(up, instance)",
        "hide": 0,
        "includeAll": true,
        "label": "Instance",
        "multi": true,
        "name": "instance",
        "query": "label_values(up, instance)",
        "type": "query"
      }
    ]
  },
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m"]
  },
  "timezone": "Asia/Seoul",
  "title": "Zero-Downtime Migration Monitor",
  "uid": "migration-monitor",
  "version": 1
}
